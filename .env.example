# Environment variables declared in this file are automatically made available to Prisma.
# See the documentation for more detail: https://pris.ly/d/prisma-schema#accessing-environment-variables-from-the-schema

# Prisma supports the native connection string format for PostgreSQL, MySQL, SQLite, SQL Server, MongoDB and CockroachDB (Preview).
# See the documentation for all the connection string options: https://pris.ly/d/connection-strings
# minio
MINIO_ACCESS_KEY=acceskey
MINIO_ENDPOINT=cdn-api.bratislava.sk
MINIO_HOST=cdn-api.bratislava.sk:443
MINIO_PORT=443
MINIO_SECRET_KEY=secretkey
MINIO_USE_SSL=true

# clamav
CLAMAV_HOST=localhost
CLAMAV_PORT=3310
CLAMAV_UNSCANNED_BUCKET=calmav-unscanned-bucket
CLAMAV_SAFE_BUCKET=calmav-clean-bucket
CLAMAV_INFECTED_BUCKET=calmav-quarantined-bucket

# postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=postgres
DATABASE_URL="postgresql://user:pass@localhost:5432/mydb?connect_timeout=30&schema=public"

# other settings
PORT=3000
NODE_ENV=development
NEST_FORMS_BACKEND=nest-forms-backend-url
MAX_FILES_PER_REQUEST=20
MAX_FILE_SIZE=1000000000