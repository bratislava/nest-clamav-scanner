// Prisma file used in deployment

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["linux-musl"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Scanner {
  id            String  @id @default(uuid())
  file_uid       String
  bucket_uid     String
  user_uid       String?
  status         String @default("NEW") // NEW, QUEUE, SCANNING, DONE, ERROR
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  @@index([file_uid, bucket_uid, user_uid, status])
}

